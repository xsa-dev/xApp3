<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="xApp3.QuotesPage"
             Padding="20">    
    <StackLayout BindingContext="{x:Reference slider}" HorizontalOptions="Center">
        <Button Text="Next" Clicked="QuoteNext"/>
        <Label x:Name="fontSize" />
        <Slider x:Name="slider" Maximum="50" Minimum="16" ValueChanged="SliderChanged"/>
        <Label x:Name="quote" />
    </StackLayout>
</ContentPage>